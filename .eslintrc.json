{
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true
    },
    "globals": {
      "console": true,
      "$": true,
      "Meteor": true
    }
  },
  "globals": {
    "Meteor": true,
    "$": true,
    "Wechat": true
  },
  "env": {
    "mocha": true,
    "node": true,
    "es6": true,
    "browser": true
  },
  "plugins": [
    "meteor",
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:meteor/recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "import/resolver": "meteor"
  },
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react/prop-types": 0,
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }]
  }
}